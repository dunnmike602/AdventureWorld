                                            <Button  VerticalAlignment="Center" Width="20" Height="20"  Command="{Binding ElementName=Npcs, Path=DataContext.OpenTextEditorForNpcDescriptions}" 
                                                    CommandParameter="{Binding}" ToolTip="Open the field in the text editor" >
                                                <Image Source="/Resources/Images/OpenFolder.png"  />
                                            </Button>
                                        </DataTemplate>
                                    </syncfusion:GridTemplateColumn.CellTemplate>
                                </syncfusion:GridTemplateColumn>

                                <!-- Optional Columns -->
                                <syncfusion:GridCheckBoxColumn Width="90" HeaderText="Visible" ShowHeaderToolTip="True" HorizontalHeaderContentAlignment="Center" MappingName="IsVisible"
                                                               TextAlignment="Left" IsHidden="{Binding HideAdditionalInformation}" ShowToolTip="True">
                                    <syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="Indicates whether the object is visible or not by default."  TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                </syncfusion:GridCheckBoxColumn>

                                <syncfusion:GridCheckBoxColumn Width="120" HeaderText="Is Light Source" ShowHeaderToolTip="True" HorizontalHeaderContentAlignment="Center" MappingName="IsLightSource"
                                                               TextAlignment="Left" IsHidden="{Binding HideAdditionalInformation}" ShowToolTip="True">
                                    <syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="Indicates whether the object can be used as a light source."  TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                </syncfusion:GridCheckBoxColumn>

                                <syncfusion:GridCheckBoxColumn Width="90" HeaderText="Is Lit" ShowHeaderToolTip="True" HorizontalHeaderContentAlignment="Center" MappingName="IsLit"
                                                               TextAlignment="Left" IsHidden="{Binding HideAdditionalInformation}" ShowToolTip="True">
                                    <syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="Indicates whether the object is currently lit."  TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                </syncfusion:GridCheckBoxColumn>

                                <syncfusion:GridCheckBoxColumn Width="90" HeaderText="Fixed" ShowHeaderToolTip="True" HorizontalHeaderContentAlignment="Center" MappingName="Fixed"
                                                               TextAlignment="Left" IsHidden="{Binding HideAdditionalInformation}" ShowToolTip="True">
                                    <syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="Indicates whether the object can be picked up. For example a lamp may be fixed to the wall."  TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                </syncfusion:GridCheckBoxColumn>

                                <syncfusion:GridCheckBoxColumn Width="150" HeaderText="Hide From Autolist" ShowHeaderToolTip="True" HorizontalHeaderContentAlignment="Center" MappingName="HideFromAutoList"
                                                               TextAlignment="Left" IsHidden="{Binding HideAdditionalInformation}" ShowToolTip="True">
                                    <syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="Indicates whether the object will be automatically listed when a room is described. Useful for Fixed objects, that can be described as part of the room description and not shown in the list."  TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                </syncfusion:GridCheckBoxColumn>

                                <syncfusion:GridCheckBoxColumn Width="90" HeaderText="Is Open" ShowHeaderToolTip="True" HorizontalHeaderContentAlignment="Center" MappingName="IsOpen"
                                                               TextAlignment="Left" IsHidden="{Binding HideAdditionalInformation}" ShowToolTip="True">
                                    <syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="NPC's can also act as containers, indicates whether it is Open or Closed."  TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                </syncfusion:GridCheckBoxColumn>

                                <syncfusion:GridCheckBoxColumn Width="90" HeaderText="Is Locked" ShowHeaderToolTip="True" HorizontalHeaderContentAlignment="Center" MappingName="IsLocked"
                                                               TextAlignment="Left" IsHidden="{Binding HideAdditionalInformation}" ShowToolTip="True">
                                    <syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="NPC's can also act as containers, indicates whether it is Locked or Unlocked."  TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                </syncfusion:GridCheckBoxColumn>

                                <syncfusion:GridCheckBoxColumn Width="90" HeaderText="Auto Follow" ShowHeaderToolTip="True" HorizontalHeaderContentAlignment="Center" MappingName="AutoFollow"
                                                               TextAlignment="Left" IsHidden="{Binding HideAdditionalInformation}" ShowToolTip="True">
                                    <syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="Indicates whether the NPC will automatically follow the player."  TextWrapping="Wrap"/>
                                        </DataTemplate>
                                    </syncfusion:GridCheckBoxColumn.HeaderToolTipTemplate>
                                </syncfusion:GridCheckBoxColumn>
                            </syncfusion:SfDataGrid.Columns>
                        </syncfusion:SfDataGrid>

                    </Grid>

                </AdornerDecorator>
            </xctk:WizardPage>

            <xctk:WizardPage x:Name="Finish" CanFinish="True" CanSelectNextPage="False" PageType="Exterior" Title="Well Done!! Everything is ready. Click Finish to create your project" Margin="0" Padding="0" />

        </xctk:Wizard>
    </Grid>
</Window>
 
 
 

 
 
 

 
 
 

 
 
 
